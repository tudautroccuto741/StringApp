<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/register_login_activity"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ProgressBar
        android:id="@+id/spinner"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/iv_poster"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent=".35"
        android:src="@drawable/app_register_above_screen"
        android:scaleType="fitXY"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/iv_logo"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_poster"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/intro_icon"
            android:scaleType="fitXY"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Discover the Endless Possiblities of Travel"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textAlignment="center"
            android:gravity="center"
            app:layout_constraintWidth_percent="0.7"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_sign_up_email"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="SIGN UP WITH EMAIL"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/boder_button_email"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_sign_up_facebook"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_sign_up_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="SIGN UP WITH FACEBOOK"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/boder_button_fb"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:drawableStart="@drawable/facebook"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/facebook"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/tv_questions_login"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_sign_up_facebook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Already have an account?"
            android:textSize="18sp"
            android:textColor="#000000"
            android:gravity="center"
            android:textAlignment="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_login"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_questions_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="LOGIN"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/boder_button_login"
            android:textColor="#000000"
            android:textAlignment="center"
            />
</androidx.constraintlayout.widget.ConstraintLayout>
